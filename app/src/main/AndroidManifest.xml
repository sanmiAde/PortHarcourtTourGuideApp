<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bignerdranch.android.portharcourttourguideapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResturantActivity"
            android:label="@string/restaurants" />
        <activity

            android:name=".ParksActivity"
            android:label="@string/parks" />
        <activity

            android:name=".HistoricalSitesActivity"
            android:label="@string/title_activity_historical_sites"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".CinemasActivity"
            android:label="@string/cinemas"></activity>

    </application>

</manifest>